{
  "name": "sistema-gestion-personal-frontend",
  "version": "1.2.0",
  "description": "Frontend para Sistema de Gestión de Personal - Aplicación web moderna con React + TypeScript",
  "author": "Equipo de Desarrollo",
  "license": "MIT",
  "keywords": [
    "react",
    "typescript",
    "tailwind",
    "personal-management",
    "hr-system",
    "frontend"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-usuario/sistema-gestion-personal-frontend.git"
  },
  "bugs": {
    "url": "https://github.com/tu-usuario/sistema-gestion-personal-frontend/issues"
  },
  "proxy": "http://127.0.0.1:3000",
  "private": true,
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@tanstack/react-query": "^4.36.1",
    "@types/react-dom": "^18.2.18",
    "ajv": "^8.17.1",
    "clsx": "^2.0.0",
    "date-fns": "4.1.0",
    "eventemitter3": "5.0.1",
    "form-data": "4.0.4",
    "html2canvas": "1.4.1",
    "jspdf": "3.0.3",
    "lucide-react": "0.294.0",
    "node-fetch": "3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-icons": "4.12.0",
    "react-router-dom": "^6.20.1",
    "react-scripts": "^5.0.1",
    "react-toastify": "11.0.5",
    "recharts": "2.12.7",
    "tailwind-merge": "^2.2.0",
    "web-vitals": "^3.5.0",
    "xlsx": "0.18.5",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "scripts": {
    "start": "set PORT=3001 && react-scripts start",
    "dev": "set PORT=3001 && react-scripts start",
    "start-network": "react-scripts start",
    "start-local": "set PORT=3001 && react-scripts start",
    "build": "react-scripts build",
    "build:analyze": "npm run build && npx serve -s build",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:ci": "react-scripts test --coverage --watchAll=false --ci",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "format": "prettier --write src/**/*.{ts,tsx,js,jsx,css,md}",
    "format:check": "prettier --check src/**/*.{ts,tsx,js,jsx,css,md}",
    "type-check": "tsc --noEmit",
    "pre-commit": "npm run type-check && npm run lint",
    "pre-commit:batch": "pre-commit.bat",
    "pre-commit:powershell": "powershell -ExecutionPolicy Bypass -File pre-commit.ps1",
    "clean": "if exist build rmdir /s /q build && if exist node_modules rmdir /s /q node_modules && if exist package-lock.json del package-lock.json && npm install",
    "prepare": "echo 'Husky disabled for Windows compatibility'",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/date-fns": "2.5.3",
    "@types/jest": "30.0.0",
    "@types/node": "24.10.0",
    "@types/react": "18.2.48",
    "@types/xlsx": "0.0.35",
    "autoprefixer": "^10.4.16",
    "axios": "1.13.2",
    "axios-mock-adapter": "2.1.0",
    "husky": "^9.1.7",
    "jest": "30.2.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "ts-jest": "29.4.5",
    "typescript": "^4.9.5"
  }
}
