{
  "name": "sistema-gestion-personal-frontend",
  "version": "1.2.0",
  "description": "Frontend para Sistema de Gestión de Personal - Aplicación web moderna con React + TypeScript",
  "author": "Equipo de Desarrollo",
  "license": "MIT",
  "keywords": [
    "react",
    "typescript",
    "tailwind",
    "personal-management",
    "hr-system",
    "frontend"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-usuario/sistema-gestion-personal-frontend.git"
  },
  "bugs": {
    "url": "https://github.com/tu-usuario/sistema-gestion-personal-frontend/issues"
  },
  "proxy": "http://localhost:3000",
  "private": true,
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@tanstack/react-query": "^4.36.1",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "ajv": "^8.17.1",
    "axios": "1.12.2",
    "clsx": "^2.0.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-router-dom": "^6.20.1",
    "react-scripts": "^5.0.1",
    "tailwind-merge": "^2.2.0",
    "web-vitals": "^3.5.0",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "scripts": {
    "start": "craco start",
    "dev": "craco start",
    "start-network": "set HOST=0.0.0.0 && craco start",
    "start-local": "craco start",
    "build": "craco build",
    "build:analyze": "npm run build && npx serve -s build",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:ci": "react-scripts test --coverage --watchAll=false --ci",
    "lint": "eslint src/**/*.{ts,tsx} --max-warnings=0",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "format": "prettier --write src/**/*.{ts,tsx,js,jsx,css,md}",
    "format:check": "prettier --check src/**/*.{ts,tsx,js,jsx,css,md}",
    "type-check": "tsc --noEmit",
    "clean": "if exist build rmdir /s /q build && if exist node_modules rmdir /s /q node_modules && if exist package-lock.json del package-lock.json && npm install",
    "prepare": "husky install",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@craco/craco": "7.1.0",
    "autoprefixer": "^10.4.16",
    "husky": "^9.1.7",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^4.9.5"
  }
}
